{
  "name": "test-project",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "npm run prisma:generate && nest start --watch",
    "start:debug": "npm run prisma:generate && nest start --debug --watch",
    "start:prod": "node dist/apps/lead-service/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/lead-service/test/jest-e2e.json",
    "prisma:generate": "prisma generate --schema=./libs/shared/src/libs/database/prisma/src/database/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./libs/shared/src/libs/database/prisma/src/database/schema.prisma",
    "prisma:studio": "prisma studio --schema=./libs/shared/src/libs/database/prisma/src/database/schema.prisma"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.10.1",
    "axios": "^1.10.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "luxon": "^3.6.1",
    "nestjs-pino": "^4.4.0",
    "pg": "^8.16.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "pino-roll": "^3.1.0",
    "prisma": "^6.10.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@shared(|/.*)$": "<rootDir>/libs/shared/src/libs/shared$1",
      "^@app/lead-core$": "<rootDir>/libs/lead-core/src",
      "^@app/lead-core/domain$": "<rootDir>/libs/lead-core/src/domain",
      "^@app/lead-core/domain/(.*)$": "<rootDir>/libs/lead-core/src/domain/$1",
      "^@app/lead-core/infrastructure/(.*)$": "<rootDir>/libs/lead-core/src/infrastructure/$1",
      "^@db/prisma/src$": "<rootDir>/libs/shared/src/libs/database/prisma/src",
      "^@db/(.*)$": "<rootDir>/libs/shared/src/libs/database/prisma/src/database/$1"
    }
  }
}
